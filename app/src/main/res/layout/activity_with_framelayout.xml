<?xml version="1.0" encoding="utf-8"?>
<me.dkzwm.widget.srl.SmoothRefreshLayout
    android:id="@+id/smoothRefreshLayout_with_frameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:sr_content="@+id/frameLayout_with_frameLayout_content">

    <FrameLayout
        android:id="@+id/frameLayout_with_frameLayout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal"
            android:text="@string/enabled_intercept_touch_while_loading"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView_with_frameLayout_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Test FrameLayout"
            android:textColor="#333333"
            android:textSize="28sp"/>

    </FrameLayout>


</me.dkzwm.widget.srl.SmoothRefreshLayout>
